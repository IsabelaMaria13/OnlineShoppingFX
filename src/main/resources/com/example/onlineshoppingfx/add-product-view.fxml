<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="15.0" prefWidth="500.0" prefHeight="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.onlineshoppingfx.controller.AddProductController">
    <Label text="Add New Product" style="-fx-font-size: 18px;"/>
    <TextField fx:id="idField" promptText="Product ID"/>
    <TextField fx:id="nameField" promptText="Product Name"/>
    <TextField fx:id="priceField" promptText="Price"/>
    <TextField fx:id="stockField" promptText="Stock"/>
    <Button text="Add Product" onAction="#handleAddProduct"/>
</VBox>
